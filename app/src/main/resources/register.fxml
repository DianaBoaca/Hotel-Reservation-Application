    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>

    <Label text="Username:" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <TextField fx:id="usernameField" GridPane.columnIndex="2" GridPane.rowIndex="4" />

    <Label text="Password:" GridPane.columnIndex="1" GridPane.rowIndex="7" />

    <PasswordField fx:id="passwordField" GridPane.columnIndex="2" GridPane.rowIndex="7" />

    <Label text="Role:" GridPane.columnIndex="1" GridPane.rowIndex="10" />

    <ChoiceBox fx:id="role" prefWidth="150.0" GridPane.columnIndex="2" GridPane.rowIndex="10">
